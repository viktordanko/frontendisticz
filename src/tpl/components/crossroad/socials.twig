<section role="region" class="c-socials u-pb-xl u-pt-xl u-bg-primary">
	<h2 class="u-vhide">
		Zastřešujeme
	</h2>
	<div class="row-main">
		<div class="c-socials__list grid grid--y-xl grid--center">
			{% for item in socials.items %}
				<div class="c-socials__item grid__cell size--6-12@sm size--4-12@md">
					<article role="article" class="b-social">
						{# {{ iconSVG(item.icon, 'b-social__icon') }} #}
						<h3 class="b-social__title h2">
							<a href="{{ item.href }}" class="b-social__link link-mask" target="_blank" rel="noopener noreferrer">
								{{ item.title|raw }}
							</a>
						</h3>
						<p>
							{{ item.perex|raw|nl2br }}
						</p>
					</article>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
