{% extends '@layout/layout-blog.twig' %}
{% set pageTitle = "WebExpo 2022" %}
{% set isNewsletter = true %}

{% block content %}
	<main id="main">
		<div class="u-bg-white u-pt-xl u-pb-xl">
			<div class="row-main">
				<div class="u-max-width--8-12 u-mx-auto u-mb-xl u-text-center">
					<h1>
						Frontend on <span class="u-color-primary"><strong>WebExpo&nbsp;2022</strong></span> <br>
						in collab with <span class="u-color-primary"><strong>Frontendisti.cz</strong></span>
					</h1>
				</div>
			</div>
			<div class="row-main">
				<div class="blog-content u-max-width--6-12 u-mx-auto">
					<div class="u-lc-0">
						<p>
							Ahoy! We are <a href="./">Frontendisti.cz</a> <i>(read front-end-disty)</i>, the largest community of frontend developers in the Czech Republic.
						</p>
						<p>
							This year we are a proud partner of the <a href="https://www.webexpo.net/" target="_blank" rel="noopener noreferrer">WebExpo 2022 conference</a>, helping with frontend program.
						</p>
					</div>

					<h2>
						Call for papers
					</h2>
					<p>
						Contribute to a conference (with a 14 year tradition) held in the beautiful city of Prague, at the largest tech conference in Central Europe.
					</p>
					<p>
						WebExpo 2022 will take place in June, 10-12th, and the call for papers <strong>closes at the end of January</strong>.
					</p>
					<p class="u-mb-md">
						<strong>Read:</strong>
						<a href="https://docs.google.com/document/d/1dcKqJasjpV1AE8AmylKJPl-SwZj78KDy8CMql3DVu1o/edit#heading=h.746bamx60g7u" target="_blank" rel="noopener noreferrer">
							the philosophy of the programme and the requested topics
						</a>
					</p>
					<p class="u-text-center">
						<a href="https://docs.google.com/forms/d/1fsThucs7TN_jrd0OaduMeVOr3ukAbFWnWaucUWjcgok/viewform?edit_requested=true" class="btn" target="_blank" rel="noopener noreferrer">
							<span class="btn__inner">
								Submit your talk
							</span>
						</a>
					</p>

					<h2>
						Contact
					</h2>
					{% set leaders = {
						items: [
							{
								name: 'Tomáš Hejč',
								desc: 'Project manager',
								mail: 'tomas.hejc@frontendisti.cz',
								img: 'hejc',
							},
							{
								name: 'Martin Michálek',
								desc: 'Programme Coordinator',
								mail: 'martin.michalek@frontendisti.cz',
								img: 'michalek',
							},
						]
					} %}
					<div class="c-leaders__wrap">
						<div class="c-leaders__list grid grid--center grid--x-md grid--y-0 u-text-center">
							{% for item in leaders.items %}
								<div class="c-leaders__item grid__cell size--6-12 size--4-12@md">
									<article class="b-leader b-leader--full">
										<ul class="b-leader__list">
											<li class="b-leader__item">
												<span class="b-leader__img">
													<img src="{{ assets.images }}illust/{{ item.img }}.jpg" alt="Profilová fotografie - {{ item.name }}" width="174" height="174" loading="lazy">
												</span>
												<span class="b-leader__name">
													{{ item.name|raw }} <br>
												</span>
												<span class="u-block u-mb-xxs">
													{{ item.desc|raw }}
												</span>
												<a href="mailto:{{ item.mail }}" class="btn btn--sm b-leader__btn">
													<span class="btn__inner">
														Contact
													</span>
												</a>
											</li>
										</ul>
									</article>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>

				<section class="b-social b-social--orange">
					<h2 class="b-social__title u-max-width--8-12">
						Stay in touch
					</h2>
					<div class="b-social__inner">
						<div class="b-social__content">
							<div class="grid">
								<div class="grid__cell size--8-12@xl">
									<p>
										Check out what's new <br>
										on social media
									</p>
								</div>
								<div class="grid__cell size--auto@xl">
									<div class="grid">
										<div class="grid__cell size--auto">
											<a class="b-social__link" href="https://www.facebook.com/groups/frontendisti" target="_blank" rel="noopener noreferrer">
												<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 61 61">
													<path fill="#ffb100" d="M30.5.5c16.6 0 30 13.4 30 30s-13.4 30-30 30-30-13.4-30-30 13.4-30 30-30z"></path>
													<path fill="#FFF" d="M28.2 39.4h3.7v-8.9h2.5l.3-3.1h-2.8v-1.5c0-.8.1-1.2 1.2-1.2h1.5v-3.1h-2.5c-2.9 0-4 1.5-4 4v1.8h-1.8v3.1h1.8v8.9z"></path>
												</svg>
												<span class="u-vhide">
													Frontendisti.cz on Facebook
												</span>
											</a>
										</div>
										<div class="grid__cell size--auto">
											<a class="b-social__link" href="https://twitter.com/Frontendisti" target="_blank" rel="noopener noreferrer">
												<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 61 61">
													<path fill="#ffb100" d="M30.5.5c16.6 0 30 13.4 30 30s-13.4 30-30 30-30-13.4-30-30 13.4-30 30-30z"></path>
													<path fill="#FFF" d="M32.7 23.4c-1.6.5-2.6 2-2.5 3.7v.6l-.6-.1c-2.3-.3-4.4-1.3-6.1-3l-.8-.8-.2.6c-.5 1.3-.2 2.8.8 3.8.5.5.4.6-.5.3-.2-.1-.4-.1-.6-.1 0 .6.2 1.2.5 1.7.4.7 1 1.3 1.7 1.6l.6.3h-.7c-.7 0-.7 0-.7.3.5 1 1.3 1.8 2.4 2.1l.8.3-.7.4c-1 .6-2.2.9-3.4 1-.4 0-.7 0-1 .1.8.5 1.6.9 2.5 1.1 2.8.8 5.8.5 8.4-1 1.9-1.2 3.4-2.9 4.2-5 .5-1.2.8-2.5.9-3.9 0-.6 0-.7.8-1.4.3-.3.6-.6.9-1 .1-.2.1-.2-.5 0-1.1.4-1.2.3-.7-.2.4-.4.7-.9.9-1.4 0 0-.2 0-.4.1-.4.2-.7.3-1.1.4l-.7.2-.9-.2c-.3-.2-.7-.4-1.1-.6-.7-.1-1.4-.1-2.2.1z"></path>
												</svg>
												<span class="u-vhide">
													Frontendisti on Twitter
												</span>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="b-social__gallery">
							{% for img in range(0, 17) %}
								<div class="b-social__img">
									<img src="{{ assets.images }}illust/gallery-{{ loop.index }}.jpg" alt="" width="110" height="110" loading="lazy">
								</div>
							{% endfor %}
						</div>
					</div>
				</section>
			</div>
		</div>

	</main>
{% endblock %}
