{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Homepage' %}
{% set isHomepage = true %}

{% block content %}
	<main id="main" class="main">
		<div class="u-bg-secondary">
			<div class="row-main">
				{% include '@components/box/conference.twig' %}
			</div>
		</div>

		<div class="u-bg-tertiary u-pt-xxl">
			<div class="row-main">
				<div class="menu">
					<nav id="menu-main" class="m-main" aria-label="Hlavní menu" aria-expanded="false">
						<ul class="m-main__list">
							{% set items = [
								{ title: 'Úvod', href: '/' },
								{ title: 'Partneři', href: '#partners' },
								{ title: 'Tým a kontakty', href: '#team' },
								{ title: 'Konference 2021', href: '/konference.html', isHiddenOnDesktop: true }
							] %}
							{% for item in items %}
								<li class="m-main__item{% if item.isHiddenOnDesktop %} is-highlighted{% endif %}{% if item.isHiddenOnDesktop %} u-hide@md{% endif %}">
									<a href="{{ item.href }}" class="m-main__link">
										{{ item.title|raw }}
									</a>
								</li>
							{% endfor %}
						</ul>
					</nav>
					<button class="menu__btn btn btn--transparent" data-menu-btn>
						<span class="btn__inner">
							<svg class="hamburger" viewBox="0 0 100 100" width="50">
								<path class="line line--top" d="m 30,33 h 40 c 0,0 9.044436,-0.654587 9.044436,-8.508902 0,-7.854315 -8.024349,-11.958003 -14.89975,-10.85914 -6.875401,1.098863 -13.637059,4.171617 -13.637059,16.368042 v 40" />
								<path class="line line--middle" d="m 30,49 h 40" />
								<path class="line line--bottom" d="m 30,67 h 40 c 12.796276,0 15.357889,-11.717785 15.357889,-26.851538 0,-15.133752 -4.786586,-27.274118 -16.667516,-27.274118 -11.88093,0 -18.499247,6.994427 -18.435284,17.125656 l 0.252538,40" />
							</svg>
						</span>
					</button>
				</div>

				<section class="b-social">
					<h2 class="b-social__title">
						Budujeme a vzděláváme <br>
						komunitu frontendových <br>
						vývojářů a designérů
					</h2>
					<div class="b-social__inner">
						<div class="b-social__content">
							<div class="grid">
								<div class="grid__cell size--8-12@xl">
									<p>
										Připoj se k naší rostoucí <br>
										komunitě profesionálů.
									</p>
								</div>
								<div class="grid__cell size--auto@xl">
									<div class="grid">
										<div class="grid__cell size--auto">
											<a class="b-social__link" href="https://www.facebook.com/groups/frontendisti" target="_blank" rel="noopener noreferrer">
												{% include "@images/bg/facebook.svg" %}
												<span class="u-vhide">
													Frontendisti na facebooku
												</span>
											</a>
										</div>
										<div class="grid__cell size--auto">
											<a class="b-social__link" href="https://twitter.com/Frontendisti">
												{% include "@images/bg/twitter.svg" %}
												<span class="u-vhide">
													Frontendisti na twitteri
												</span>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="b-social__gallery">
							{% for img in range(0, 17) %}
								<div class="b-social__img">
									<img src="{{ assets.images }}illust/gallery-{{ loop.index }}.jpg" alt="" width="110" height="110" loading="lazy">
								</div>
							{% endfor %}
						</div>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-mint u-pt-xxl">
			<div class="row-main">
				<section class="c-archive">
					<h2 class="c-archive__title">
						Prohlédni si náš archiv, <br>
						kde je přes 160 záznamů.
					</h2>
					<div class="c-archive__list grid">
						{% set cards = [
							{
								imgSrc: 'proft.jpg',
								name: 'Břetislav
								Proft',
								title: 'State of JS 2020 a aktuální adopce features',
								linkHref: 'https://www.youtube.com/watch?v=N-ktfmZbR1w',
								index: 215,
							},
							{
								imgSrc: 'repka.jpg',
								name: 'Radek
								Řepka',
								title: 'Fetchování a cachování dat s React Query',
								linkHref: 'https://www.youtube.com/watch?v=RyPSDWDqlzI',
								index: 214,
							},
							{
								imgSrc: 'litera.jpg',
								name: 'Tomáš
								Litera',
								title: 'Renovate your dependencies',
								linkHref: 'https://www.youtube.com/watch?v=WxXlsAbyZuU',
								index: 213,

							},
							{
								imgSrc: 'kout.jpg',
								name: 'Tomáš
								Kout',
								title: 'Frontendové novinky',
								linkHref: 'https://www.youtube.com/watch?v=vLl1YZqlaTc',
								index: 212,
							},
							{
								imgSrc: 'dobes.jpg',
								name: 'Vojtěch
								Doběš',
								title: 'Not all zeros are equal (TypeScript)',
								linkHref: 'https://www.youtube.com/watch?v=Egr6hR5e9KY',
								index: 211,
							},
							{
								imgSrc: 'roubicek.jpg',
								name: 'Aleš
								Roubíček',
								title: 'Špekulování (o TypeScriptu)',
								linkHref: 'https://www.youtube.com/watch?v=yKom9HFZYxY',
								index: 210,
							},
							{
								imgSrc: 'pokorny.jpg',
								name: 'Robin
								Pokorný',
								title: 'Modré z nebe - proč používám TypeScript',
								linkHref: 'https://www.youtube.com/watch?v=oSFlFK1rEC4',
								index: 209,
							},
							{
								imgSrc: 'fojtl.jpg',
								name: 'Marek
								Fojtl',
								title: 'Typescript v praxi',
								linkHref: 'https://www.youtube.com/watch?v=pAndE_xu2aw',
								index: 208,
							},
						] %}
						{% for card in cards %}
							<div class="c-archive__item grid__cell size--6-12 size--3-12@lg">
								<article class="b-card">
									<div class="b-card__inner">
										<div class="b-card__img">
											<span class="b-card__logo">
												{% include "@images/bg/logo-green-archive-placeholder.svg" %}
											</span>
											<img src="{{ assets.images }}illust/{{ card.imgSrc }}" alt="Profilová fotografie - {{ card.name }}" width="174" height="174" loading="lazy">
										</div>
										<div class="b-card__content">
											<h3 class="b-card__name">
												<a class="link-mask" href="{{ card.linkHref }}" target="_blank" rel="noopener noreferrer">
													{{ card.name|raw|nl2br }}
												</a>
											</h3>
										</div>
									</div>
									<div class="b-card__bottom">
										<p class="b-card__highlight">
											#{{ card.index }}
										</p>
										<h4 class="b-card__title">
											{{ card.title|raw }}
										</h4>
									</div>
								</article>
							</div>
						{% endfor %}
					</div>
					<div class="c-archive__overlay">
						<p>
							<a href="https://www.youtube.com/c/FrontendistiCz/videos" class="btn btn--success" target="_blank" rel="noopener noreferrer">
								<span class="btn__inner">
									<span class="item-icon">
										<span class="item-icon__icon">
											{% include '@components/core/icon-svg/icon-svg.twig' with {
												 props: {
													name: 'eye'
												}
											} %}
										</span>
										<span class="item-icon__text">
											Celý archiv
										</span>
									</span>
								</span>
							</a>
						</p>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-default u-pt-xxl">
			<div class="row-main">
				<section class="b-fb">
					<h2 class="b-fb__title">
						Učte se od profesionálů.
					</h2>
					<div class="b-fb__inner">
						<div class="b-fb__img">
							<img src="{{ assets.images }}illust/fb-group.jpg" alt="Ukázka příspěvku z facebookové skupiny Frontendisti.cz" loading="lazy">
						</div>
						<div class="b-fb__content">
							<p>
								Ptej se a sdílej svoje zkušenosti <br>
								v uzavřené FB skupině.
							</p>
							<p>
								<a class="btn" href="https://www.facebook.com/groups/frontendisti" target="_blank" rel="noopener noreferrer">
									<span class="btn__inner">
										Diskuze
									</span>
								</a>
							</p>
						</div>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-tertiary u-pt-xxl">
			<div class="row-main">
				<section class="b-job">
					<h2 class="b-job__title">
						Kto hledá, najde.
					</h2>
					<div class="b-job__inner">
						<div class="b-job__content">
							<p>
								Hledáte práci nebo skvělé lidi <br>
								do&nbsp;týmu?
							</p>
							<p>
								<a class="btn btn--blue" href="https://www.facebook.com/groups/frontendistiprace" target="_blank" rel="noopener noreferrer">
									<span class="btn__inner">
										Práce
									</span>
								</a>
							</p>
						</div>
						<div class="b-job__img">
							<img src="{{ assets.images }}illust/job.jpg" alt="Fotka Ježíše Krista se vzpaženýma rucema s tmavěmodrou oblohou v pozadí" loading="lazy">
						</div>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-mint u-pt-xxl">
			<div class="row-main">
				{% set partners = {
					items: [
						{
							name: 'rohlik',
							href: 'https://rohlik.cz/',
							alt: 'rohlik.cz',
							width: '170',
							height: '86'
						},
						{
							name: 'LMC',
							href: 'https://www.lmc.eu/',
							alt: 'LMC s.r.o.',
							width: '112',
							height: '85'
						},
						{
							name: 'SUPERKODERS',
							href: 'https://superkoders.cz/',
							alt: 'SUPERKODERS',
							width: '230',
							height: '30'
						},
						{
