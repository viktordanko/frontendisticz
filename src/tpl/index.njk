{% extends 'layout/layout.njk' %}
{% set pageTitle = 'Rozcestník HTML šablon' %}

{% block content %}

	<main role="main" id="main">
		<div class="b-intro b-intro--secondary">
			<div class="b-intro__inner">
				<div class="row-main">
					<h1 class="b-intro__title">
						<strong>
							Rozcestník
						</strong>
						HTML šablon
					</h1>
				</div>
			</div>
		</div>
		<div class="u-pt-xl">
			<div class="row-main">
				<div class="u-mb-xl">
					{% for meetup in meetups | reverse %}


						<br>
						{{meetup.title}}<br>
						{{meetup.date | date("D.  M. YYYY")}}
						<br>
						{% for talk in meetup.talks %}
							{{talk.title}} - {{talk.speaker.name}}<br>
						{%endfor%}
						<hr>

					{%endfor%}


					<ul>
						<li>
							<a href="./00-style-guide.html">
								00 - Style Guide
							</a>
						</li>
						<li>
							<a href="./01-homepage.html">
								01 - Titulní stránka
							</a>
						</li>
						<li>
							<a href="./02-archive.html">
								02 - Archiv akcí
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</main>

{% endblock %}
