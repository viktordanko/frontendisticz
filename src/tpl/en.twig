{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Homepage' %}
{% set isHomepage = true %}

{% block content %}
	<main id="main" class="main">




		<div class="u-bg-tertiary u-pt-xxl">
			<div class="row-main">
				<div class="menu">
					<nav id="menu-main" class="m-main" aria-label="Hlavní menu" aria-expanded="false">
						<ul class="m-main__list">
							{% set items = [
								{ title: 'Home', href: '/en' },
								{ title: 'About us', href: '#about' },
								{ title: 'Partners', href: '#partners' },
								{ title: 'Team and Contacts', href: '#team' },
								{ title: 'Česky', href: '/' },
							] %}
							{% for item in items %}
								<li class="m-main__item{% if item.isHiddenOnDesktop %} is-highlighted{% endif %}{% if item.isHiddenOnDesktop %} u-hide@md{% endif %}">
									<a href="{{ item.href }}" class="m-main__link">
										{{ item.title|raw }}
									</a>
								</li>
							{% endfor %}
						</ul>
					</nav>
					<button class="menu__btn btn btn--transparent" data-menu-btn>
						<span class="btn__inner">
							<svg class="hamburger" viewBox="0 0 100 100" width="50">
								<path class="line line--top" d="m 30,33 h 40 c 0,0 9.044436,-0.654587 9.044436,-8.508902 0,-7.854315 -8.024349,-11.958003 -14.89975,-10.85914 -6.875401,1.098863 -13.637059,4.171617 -13.637059,16.368042 v 40" />
								<path class="line line--middle" d="m 30,49 h 40" />
								<path class="line line--bottom" d="m 30,67 h 40 c 12.796276,0 15.357889,-11.717785 15.357889,-26.851538 0,-15.133752 -4.786586,-27.274118 -16.667516,-27.274118 -11.88093,0 -18.499247,6.994427 -18.435284,17.125656 l 0.252538,40" />
							</svg>
						</span>
					</button>
				</div>

				<section class="b-social">
					<h2 class="b-social__title">
						We are building<br>
						and teaching community<br>
						of front-end developers.
					</h2>
					<div class="b-social__inner">
						<div class="b-social__content">
							<div class="grid">
								<div class="grid__cell size--8-12@xl">
									<p>
										Follow what's new<br>
										on our social networks.
									</p>
								</div>
								<div class="grid__cell size--auto@xl">
									<div class="grid">
										<div class="grid__cell size--auto">
											<a class="b-social__link" href="https://www.facebook.com/groups/frontendisti" target="_blank" rel="noopener noreferrer">
												{% include "@images/bg/facebook.svg" %}
												<span class="u-vhide">
													Frontendisti on Facebook
												</span>
											</a>
										</div>
										<div class="grid__cell size--auto">
											<a class="b-social__link" href="https://twitter.com/Frontendisti" target="_blank" rel="noopener noreferrer">
												{% include "@images/bg/twitter.svg" %}
												<span class="u-vhide">
													Frontendisti on Twitter
												</span>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="b-social__gallery">
							{% for img in range(0, 17) %}
								<div class="b-social__img">
									<img src="{{ assets.images }}illust/gallery-{{ loop.index }}.jpg" alt="" width="110" height="110" loading="lazy">
								</div>
							{% endfor %}
						</div>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-mint u-pt-xxl">
			<div class="row-main">
				<section class="c-gallery">
					<h2 class="c-gallery__title">
						Check our Youtube, <br>
						with more than 200 videos.
					</h2>
					{% include '@components/box/videoThumbnails.twig' %}
					<div class="c-gallery__overlay">
						<p>
							<a href="https://www.youtube.com/c/FrontendistiCz/videos" class="btn btn--success" target="_blank" rel="noopener noreferrer">
								<span class="btn__inner">
									<span class="item-icon">
										<span class="item-icon__icon">
											{% include '@components/core/icon-svg/icon-svg.twig' with {
												 props: {
													name: 'eye'
												}
											} %}
										</span>
										<span class="item-icon__text">
											Show all
										</span>
									</span>
								</span>
							</a>
						</p>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-tertiary u-pt-xxl">
			<div class="row-main">
				<section class="b-content u-mb-xxl">
					<h2 class="b-content__title">
						Call for papers
					</h2>
					<div class="u-max-width--6-12 u-mx-auto u-text-center">
						<p>
							Do you have any interesting topic about frontend - CSS, JS and related topics?
							Fill our form. Don't hestiate try it, even if you don't have experience with public talk yet. We will be happy to help you.
						</p>
						<p class="u-pt-sm u-mb-xl">
							<a href="https://forms.gle/TAyjxZH9YHn8YmKV7" class="btn btn--blue" target="_blank" rel="noopener noreferrer">
								<span class="btn__inner">
									Sign up a talk
								</span>
							</a>
						</p>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-default u-pt-xxl">
			<div class="row-main">
				<section class="b-fb">
					<h2 class="b-fb__title">
						Learn from professionals.
					</h2>
					<div class="b-fb__inner">
						<div class="b-fb__img">
							<img src="{{ assets.images }}illust/fb-group.jpg" alt="Ukázka příspěvku z facebookové skupiny Frontendisti.cz" loading="lazy">
						</div>
						<div class="b-fb__content">
							<p>
								Ask and share your knowledge<br>
								in closed FB group.
							</p>
							<p>
								<a class="btn" href="https://www.facebook.com/groups/frontendisti" target="_blank" rel="noopener noreferrer">
									<span class="btn__inner">
										Discussion
									</span>
								</a>
							</p>
						</div>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-mint u-pt-xxl">
			<div class="row-main">
				<section class="b-job">
					<h2 class="b-job__title">
						Who is looking for, find it.
					</h2>
					<div class="b-job__inner">
						<div class="b-job__content">
							<p>
								Are you seeking a job <br>
								or great colleagues?
							</p>
							<p>
								<a class="btn btn--success" href="https://www.facebook.com/groups/frontendistiprace" target="_blank" rel="noopener noreferrer">
									<span class="btn__inner">
										Jobs
									</span>
								</a>
							</p>
						</div>
						<div class="b-job__img">
							<img src="{{ assets.images }}illust/job.jpg" alt="Fotka Ježíše Krista se vzpaženýma rucema s tmavěmodrou oblohou v pozadí" loading="lazy">
						</div>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-tertiary u-pt-xxl">
			<div class="row-main">

				<section id="about" class="b-content u-mb-xxl">
					<h2 class="b-content__title">
						About us
					</h2>
					<div class="u-max-width--6-12 u-mx-auto">
						<p>The goal of our Frontendisti.cz association is to build and teach a community of front-end developers.</p>

						<p>Management staff Frontendisti.cz was established in 2014. Since then, we organize live or online <a href="https://www.meetup.com/frontendisti/">meetup</a> almost every month in Prague, Brno, and occasionally in other Czech cities.</p>

						<p>
							From 2020 we live-stream almost every event on YouTube.
							Thanks to this, over 250 professional lecture recordings have been made available for free to the community on <a href="https://www.youtube.com/c/FrontendistiCz">YouTube</a>.
							About front-end we can discuss on <a href="https://www.facebook.com/groups/frontendisti/">Facebook</a>.

							There we are managing <a href="https://www.facebook.com/groups/frontendistiprace/">jobs offers</a> as well.
						</p>
					</div>
				</section>
			</div>
		</div>

		<div class="u-bg-mint u-pt-xxl">
			<div class="row-main">
				{% set partners = {
					items: [
						{
							name: 'emplifi',
							href: 'https://emplifi.io/',
							alt: 'Emplifi.io',
							width: '230',
							height: '71'
						},
						{
							name: 'artin',
							href: 'https://www.artin.cz/',
							alt: 'ARTIN',
							width: '230',
							height: '151'
						}
					]
				} %}

				{% set partners2 = {
					items: [
						{
							name: 'superkoders',
							href: 'https://superkoders.com/',
							alt: 'SUPERKODERS',
							width: '330',
							height: '60'
						},
						{
							name: 'pipedrive',
							href: 'https://www.pipedrive.com/',
							alt: 'PIPEDRIVE',
							width: '200',
							height: '75'
						}
					]
				} %}
				{% include '@components/crossroad/partners-en.twig' %}
			</div>
		</div>

		<div class="u-bg-default u-pt-xxl">
			<div class="row-main">
				{% include '@components/crossroad/leaders-en.twig' %}
			</div>


		</div>
	</main>
{% endblock %}
