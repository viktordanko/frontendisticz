{% for event in events %}
	{% if event %}
		<section role="region" class="c-events">
			<div class="row-main row-main--sm">
				<div class="u-max-width--8-12 u-mx-auto u-mb-md">
					<h3 class="u-font-bold">
						{{ event.title }}
					</h3>
					<div class="c-events__info">
						<p>
							{{ event.place }}
						</p>
						{% if event.partners %}
							<ul class="c-events__partners">
								{% for partner in event.partners %}
									<li class="c-events__partner">
										<a class="c-events__link" href="{{ partner.url }}" target="_blank" rel="noreferrer noopener">
											<img src="{{ assets.images }}logos/{{ partner.img }}" width="{{ partner.imgWidth }}" height="{{ partner.imgHeight }}"alt="Logo spoleÄnosti {{ partner.name }}">
										</a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>
				</div>
				<div class="c-events__wrap u-mb-xl">
					{% if event.partners %}
					<div class="c-events__list">
						{% for person in event.persons %}
							<div class="c-events__item">
								<article role="article" class="b-event">
									<div class="b-event__img">
										{% if person.img %}
											<img src="{{ assets.images }}illust/{{ person.img }}.jpg" alt="" width="50" height="50">
										{% else %}
											<span class="b-event__placeholder"></span>
										{% endif %}
									</div>
									<p class="b-event__info">
										<a href="{{ person.twitter }}" class="b-event__name" target="_blank" rel="noopener noreferrer">
											{{ person.name }}
										</a>
										<span class="b-event__job">
											{{ person.job }}
										</span>
										<span class="b-event__title">
											{{ person.topic }}
										</span>
									</p>
									<ul class="b-event__list">
										{% if person.youtubeHref %}
											<li class="b-event__item">
												<a href="{{ person.youtubeHref }}" class="b-event__link b-event__link--icon" target="_blank" rel="noopener noreferrer">
													{{ iconSVG('youtube', 'b-event__icon') }}
													Video
												</a>
											</li>
											{% else %}
											<li class="b-event__item b-event__item--disabled">
												{{ iconSVG('youtube', 'b-event__icon') }}
												Video
											</li>
										{% endif %}
										{% if person.slideshareHref %}
											<li class="b-event__item">
												<a href="{{ person.slideshareHref }}" class="b-event__link b-event__link--icon" target="_blank" rel="noopener noreferrer">
													{{ iconSVG('slideshare', 'b-event__icon') }}
													Prezentace
												</a>
											</li>
										{% else %}
											<li class="b-event__item b-event__item--disabled">
												{{ iconSVG('slideshare', 'b-event__icon b-event__icon--disabled') }}
												Prezentace
											</li>
										{% endif %}
									</ul>
								</article>
							</div>
						{% endfor %}
					</div>
					{% endif %}
					{% if event.showAllBtn %}
						<p class="u-mx-auto u-mt-lg">
							<a href="{{ event.showAllBtn.allVideosHref }}" class="item-icon item-icon--before">
								{{ iconSVG('youtube') }}
								{{ event.showAllBtn.allVideosText }}
							</a>
						</p>
					{% endif %}
				</div>
			</div>
		</section>
	{% endif %}
{% endfor %}
